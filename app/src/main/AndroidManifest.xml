<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pepg.todolist">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_tododebug"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_todo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.pepg.todolist.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.pepg.todolist.ListActivity" />
        <activity android:name="com.pepg.todolist.DetailActivity" />
        <activity android:name="com.pepg.todolist.UpdateActivity" />
        <activity android:name="com.pepg.todolist.AddguideActivity" />
        <receiver
            android:name=".Widget.WidgetProvider"
            android:label="위젯 테스트">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_provider_basic" />
        </receiver>
    </application>

</manifest>