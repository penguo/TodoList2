<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.pepg.todolist.Fragment.DetailAlarmFragment">

    <LinearLayout
        android:id="@+id/detail_layout_alarm_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/xml_item"
        android:gravity="center_vertical"
        android:minHeight="72dp"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="알림:"
            android:textSize="16sp"
            android:visibility="visible" />

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/detail_iv_alarm1"
                    style="@style/icon"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="12dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="12dp"
                    android:background="@null"
                    app:srcCompat="@drawable/ic_alarm_dark" />

                <ImageView
                    android:id="@+id/detail_iv_alarm2"
                    style="@style/icon"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="12dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="12dp"
                    android:background="@null"
                    app:srcCompat="@drawable/ic_alarm_dark" />

                <ImageView
                    android:id="@+id/detail_iv_alarm3"
                    style="@style/icon"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="12dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="12dp"
                    android:background="@null"
                    app:srcCompat="@drawable/ic_alarm_dark" />
            </LinearLayout>

        </android.support.design.widget.CoordinatorLayout>

    </LinearLayout>
</LinearLayout>
