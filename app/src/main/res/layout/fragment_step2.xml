<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/xml_item"
    android:elevation="1dp"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:text="어떠한 항목인가요?"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/fs2_layout_todo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/xml_edititem"
            android:minHeight="72dp"
            android:orientation="horizontal"
            android:transitionName="layout_date"
            android:translationZ="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <android.support.design.widget.CoordinatorLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/fs2_iv_check_todo"
                        style="@style/icon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="right|center_vertical"
                        android:background="@null"
                        app:srcCompat="@drawable/ic_check_black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="할 일"
                            android:textColor="#bf000000"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="~ 부터 ~ 까지"
                            android:textSize="14sp"
                            android:visibility="visible" />

                    </LinearLayout>
                </android.support.design.widget.CoordinatorLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:id="@+id/fs2_layout_schedule"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/xml_edititem"
            android:minHeight="72dp"
            android:orientation="horizontal"
            android:transitionName="layout_date"
            android:translationZ="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <android.support.design.widget.CoordinatorLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/fs2_iv_check_schedule"
                        style="@style/icon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="right|center_vertical"
                        android:background="@null"
                        app:srcCompat="@drawable/ic_check_black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="일정"
                            android:textColor="#bf000000"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="선택한 날짜에"
                            android:textSize="14sp"
                            android:visibility="visible" />

                    </LinearLayout>
                </android.support.design.widget.CoordinatorLayout>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fs2_layout_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/xml_edititem"
        android:minHeight="72dp"
        android:orientation="horizontal"
        android:transitionName="layout_date"
        android:translationZ="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="날짜:"
                android:textSize="16sp"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fs2_tv_startdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9999-99-99"
                    android:textSize="16sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/fs2_tv_datemiddle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="   ~   "
                    android:textSize="16sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/fs2_tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9999-99-99"
                    android:textSize="16sp"
                    android:visibility="visible" />

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>