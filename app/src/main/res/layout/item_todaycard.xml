<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/today_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/today_layout_subtitle"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/today_layout_uppermargin"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:orientation="horizontal"></LinearLayout>

            <TextView
                android:id="@+id/today_tv_subtitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical"
                android:text="LIST CATEGORY"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/today_layout_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:minHeight="72dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/today_tv_todo_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TODO TITLE VIEW"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/today_tv_semi_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SEMI TITLE VIEW"
                android:textSize="18sp" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="12dp"
            android:padding="6dp">

            <com.pepg.todolist.Optional.SmoothCheckBox
                android:id="@+id/today_scb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:color_checked="@color/colorAccent" />

        </FrameLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>