<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.pepg.todolist.fragment.DetailDateFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/detail_layout_ach_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/xml_item"
        android:gravity="center_vertical"
        android:minHeight="72dp"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/detail_tv_ach_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="진행:"
            android:textSize="16sp"
            android:visibility="visible" />

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="6dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp">

                <include
                    android:id="@+id/detail_pb"
                    layout="@layout/include_progressbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </FrameLayout>

            <ImageView
                android:id="@+id/detail_iv_zoom_ach"
                style="@style/icon"
                app:srcCompat="@drawable/ic_zoomin_black"
                android:layout_gravity="right"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:background="@null" />

            <TextView
                android:id="@+id/detail_tv_ach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="50%"
                android:textSize="18sp"
                android:textStyle="bold|italic" />

        </android.support.design.widget.CoordinatorLayout>

    </LinearLayout>
</LinearLayout>
