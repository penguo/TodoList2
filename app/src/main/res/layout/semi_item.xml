<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/semi_layout"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:layout_marginTop="3dp"
    android:orientation="vertical">

    <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
        android:id="@+id/semi_pb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="2dp"
        app:rcBackgroundColor="@color/custom_progress_background"
        app:rcBackgroundPadding="4dp"
        app:rcMax="1"
        app:rcProgress="0"
        app:rcProgressColor="@color/custom_progress_semi_progress"
        app:rcRadius="10dp"
        app:rcSecondaryProgress="100"
        app:rcSecondaryProgressColor="@color/custom_progress_semi_progress_half" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="3dp">

            <TextView
                android:id="@+id/semi_tv_title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="TITLE VIEW POINT"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/semi_tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="20dp"
                    android:text="date viewpoint"
                    android:textSize="15sp" />

            </LinearLayout>

            <com.pepg.todolist.Optional.SmoothCheckBox
                android:id="@+id/semi_scb"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                app:color_checked="@color/colorAccent" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>